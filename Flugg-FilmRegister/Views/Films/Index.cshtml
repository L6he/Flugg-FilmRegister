@model IEnumerable<Flugg_FilmRegister.Models.Films.FilmIndexViewModel>

@{
    int rowNum = 1;
    int currentRow = 1;
    int currentTile = 1;
    int tilesInRow = 6;
}
<div>
    <a asp-action="Create" asp-asp-controller="Films" class="btn btn-primary">Add a film</a>
</div>

<div class="h1">Your films:</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                @*Add images here as well*@
                <th scope="col">#</th>

                <th scope="col">Name</th>

                <th scope="col">Description</th>

                <th scope="col">Release Date</th>

                <th scope="col">Genre</th>

                <th scope="col">Director</th>

                <th scope="col">Language</th>

                <th scope="col">Admin Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any() != null)
            {
                foreach (var film in Model)
                {
                    <tr>
                        @*here too*@
                        <td>@rowNum</td>

                        <td>@film.FilmName</td>

                        <td>@film.Description</td>

                        <td>@film.ReleaseDate</td>

                        <td>@film.Genre</td>

                        <td>@film.Director</td>

                        <td>@film.Language</td>

                        <td>
                            <a asp-action="Details" asp-controller="Films" asp-route-id="@film.ID" class="btn btn-info">Details</a>
                            <br />
                            <a asp-action="Update" asp-controller="Films" asp-route-id="@film.ID" class="btn btn-info">Configure</a>
                            <br />
                            <a asp-action="Clone" asp-controller="Films" asp-route-id="@film.ID" class="btn btn-info">Duplicate</a>
                            <br />
                            <a asp-action="Delete" asp-controller="Films" asp-route-id="@film.ID" class="btn btn-info">Delete</a>
                        </td>
                    </tr>
                    rowNum++;
                }
            }
        </tbody>
    </table>
</form>